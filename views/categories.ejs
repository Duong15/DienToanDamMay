<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh mục - Siêu thị mini Bely</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light custom-nav">
        <div class="container">
            <a class="navbar-brand" href="/">
                <h1 class="mb-0">Bely</h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/categories">Danh mục</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Liên hệ</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <a href="/cart" class="btn btn-outline-dark me-2">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="badge bg-pink ms-1">0</span>
                    </a>
                    <% if (user) { %>
                        <div class="dropdown">
                            <button class="btn btn-outline-dark dropdown-toggle" type="button" id="userDropdown"
                                data-bs-toggle="dropdown">
                                <%= user.name %>
                            </button>
                            <ul class="dropdown-menu">
                                <% if (user.role==='admin' ) { %>
                                    <li><a class="dropdown-item" href="/admin/dashboard">Quản trị</a></li>
                                    <% } %>
                                        <li><a class="dropdown-item" href="/profile">Tài khoản</a></li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li><a class="dropdown-item" href="/auth/logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                        <% } else { %>
                            <a href="/auth/login" class="btn btn-outline-dark">
                                <i class="fas fa-user"></i>
                            </a>
                            <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Categories Section -->
    <div class="container py-5">
        <h2 class="text-center mb-4">Danh mục sản phẩm</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% categories.forEach(category=> { %>
                <div class="col">
                    <div class="card h-100">
                        <img src="<%= category.image %>" class="card-img-top" alt="<%= category.name %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= category.name %>
                            </h5>
                            <p class="card-text">
                                <%= category.description %>
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a href="/products?category=<%= category._id %>" class="btn btn-primary w-100">
                                Xem sản phẩm
                            </a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>

        <% if (categories.length===0) { %>
            <div class="text-center py-5">
                <h3>Chưa có danh mục nào</h3>
                <p>Vui lòng quay lại sau.</p>
            </div>
            <% } %>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h3>Bely</h3>
                    <p>Siêu thị mini của bạn</p>
                </div>
                <div class="col-md-4">
                    <h4>Liên hệ</h4>
                    <p>
                        <i class="fas fa-phone"></i> 0123 456 789<br>
                        <i class="fas fa-envelope"></i> info@bely.com<br>
                        <i class="fas fa-map-marker-alt"></i> 123 Đường ABC, Thành phố XYZ
                    </p>
                </div>
                <div class="col-md-4">
                    <h4>Theo dõi chúng tôi</h4>
                    <div class="social-links">
                        <a href="#" class="me-2"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="me-2"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>