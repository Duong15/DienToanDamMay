<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lỗi - Siêu thị mini Bely</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/header') %>

        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-body text-center py-5">
                            <h1 class="display-1 text-danger mb-4">
                                <i class="bi bi-exclamation-triangle"></i>
                            </h1>
                            <h2 class="card-title mb-4">Đã xảy ra lỗi</h2>
                            <p class="card-text lead mb-4">
                                <%= message || 'Đã xảy ra lỗi. Vui lòng thử lại sau.' %>
                            </p>
                            <% if (typeof error !=='undefined' && error.stack && process.env.NODE_ENV==='development' )
                                { %>
                                <div class="alert alert-danger text-start">
                                    <pre class="mb-0"><%= error.stack %></pre>
                                </div>
                                <% } %>
                                    <div class="mt-4">
                                        <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">
                                            <i class="bi bi-arrow-left"></i> Quay lại
                                        </a>
                                        <a href="/" class="btn btn-primary">
                                            <i class="bi bi-house"></i> Trang chủ
                                        </a>
                                    </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>

            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>